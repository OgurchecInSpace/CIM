QPushButton {
    background-color: white;
    border-width: 2px;
    border-radius: 10px;
    border-color: beige;
    font: bold 14px;
    min-width: 10em;
    padding: 6px;
    transition: all 500ms ease-out;
}

QPushButton:hover {
    background-color: lightgray;
}

* {
    font: bold 14px;
}